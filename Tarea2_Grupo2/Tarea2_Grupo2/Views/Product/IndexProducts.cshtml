@model IEnumerable<ProductsModel>
@{
    ViewData["Title"] = "Listado de Productos";
}

<h1>Listado de Productos</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <div class="mt-3 mb-3">
                <a asp-action="Create" asp-controller="Products" class="btn btn-success">
                    Nuevo Producto
                </a>
            </div>

            <table class="table table-bordered table-striped table-responsive" id="facultiesTable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Producto</th>
                        <th>Proveedor</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var products in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(item => products.Id)</td>
                            <td>@Html.DisplayFor(item => products.ProductsName)</td>
                            <td>@Html.DisplayFor(item => products.SupplierName)</td>
                            <td>
                                <a asp-controller="Products"
                                   asp-action="Edit"
                                   asp-route-id="@products.Id"
                                   class="btn btn-primary">
                                    Editar
                                </a>
                                <a asp-controller="products"
                                   asp-action="Delete"
                                   asp-route-id="@products.Id"
                                   class="btn btn-danger">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
