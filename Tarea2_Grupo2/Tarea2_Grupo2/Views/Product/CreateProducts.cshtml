@model ProductsModel

@{
    ViewData["Title"] = "Nuevo Producto";
}

<h1>Nuevp Producto</h1>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ProductsName" class="control-label"></label>
                <input asp-for="ProductsName" class="form-control" />
                <span asp-validation-for="ProductsName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SupplierName" class="control-label"></label>
                <select class="form-select" asp-for="SupplierId" asp-items="@ViewBag.Universities">
                    <option value="">Seleccione</option>
                </select>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />

                <a asp-action="Index">Regresar al listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
