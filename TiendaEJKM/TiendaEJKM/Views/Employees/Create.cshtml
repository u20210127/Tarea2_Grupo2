@model EmployeesModel

@{
    ViewData["Title"] = "Nuevo empleado";
}

<h1>Nueva empleado</h1>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name_Employee" class="control-label"></label>
                <input asp-for="Name_Employee" class="form-control" />
                <span asp-validation-for="Name_Employee" class="text-danger"></span>
            </div>

            <div class="form-group-0 mb-3">
                <label asp-for="Address_Employee" class="control-label"></label>
                <input asp-for="Address_Employee" class="form-control" />
                <span asp-validation-for="Address_Employee" class="text-danger"></span>
            </div>

            <div class="form-group-0 mb-3">
                <label asp-for="Phone_Employee" class="control-label"></label>
                <input asp-for="Phone_Employee" class="form-control" />
                <span asp-validation-for="Phone_Employee" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />

                <a asp-action="Index">Regresar al listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>

    <script>
        function confirmAction() {
            if (confirm('¿Estás seguro de crear este empleado?')) {
                return true;
            } else {
                window.location.href = '@Url.Action("Index", "Employees")';
                return false;
            }
        }
    </script>
}