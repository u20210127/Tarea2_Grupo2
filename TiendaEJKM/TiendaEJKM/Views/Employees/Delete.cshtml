@model EmployeesModel

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1>Eliminar empleado</h1>
    <hr />

    <h3>¿Está seguro que desea eliminarlo?</h3>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <dl class="row">
                    <div class="col-sm-2">
                        <dt>
                            @Html.DisplayNameFor(model => model.id_Employee)
                        </dt>
                    </div>
                    <div class="col-sm-10">
                        <dd>
                            @Html.DisplayFor(model => model.id_Employee)
                        </dd>
                    </div>
                    <div class="col-sm-2">
                        <dt>
                            @Html.DisplayNameFor(model => model.Name_Employee)
                        </dt>
                    </div>
                    <div class="col-sm-10">
                        <dd>
                            @Html.DisplayFor(model => model.Name_Employee)
                        </dd>
                    </div>
                    <div class="col-sm-2">
                        <dt>
                            @Html.DisplayNameFor(model => model.Address_Employee)
                        </dt>
                    </div>
                    <div class="col-sm-10">
                        <dd>
                            @Html.DisplayFor(model => model.Address_Employee)
                        </dd>
                    </div>
                    <div class="col-sm-2">
                        <dt>
                            @Html.DisplayNameFor(model => model.Phone_Employee)
                        </dt>
                    </div>
                    <div class="col-sm-10">
                        <dd>
                            @Html.DisplayFor(model => model.Phone_Employee)
                        </dd>
                    </div>
                </dl>

                <form asp-action="Delete">
                    <input asp-for="id_Employee" type="hidden" class="for-control" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-primary">Regresar al listado</a>
                </form>
            </div>
        </div>
    </div>
</div>