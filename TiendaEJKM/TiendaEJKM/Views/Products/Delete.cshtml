@model ProductsModel

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1>Eliminar producto</h1>
    <hr/>

    <h3>¿Está seguro que desea eliminarlo?</h3>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <dl class="row">
                    <div class="col-sm-2">
                        <dt>
                            @Html.DisplayNameFor(model => model.id_Product)
                        </dt>
                    </div>
                    <div class="col-sm-10">
                        <dd>
                            @Html.DisplayFor(model => model.id_Product)
                        </dd>
                    </div>
                    <div class="col-sm-2">
                        <dt>
                            @Html.DisplayNameFor(model => model.Name_Product)
                        </dt>
                    </div>
                    <div class="col-sm-10">
                        <dd>
                            @Html.DisplayFor(model => model.Name_Product)
                        </dd>
                    </div>
                    <div class="col-sm-2">
                        <dt>
                            @Html.DisplayNameFor(model => model.Category_Product)
                        </dt>
                    </div>
                    <div class="col-sm-10">
                        <dd>
                            @Html.DisplayFor(model => model.Category_Product)
                        </dd>
                    </div>
                    <div class="col-sm-2">
                        <dt>
                            @Html.DisplayNameFor(model => model.Price_Product)
                        </dt>
                    </div>
                    <div class="col-sm-10">
                        <dd>
                            @Html.DisplayFor(model => model.Price_Product)
                        </dd>
                    </div>
                    <div class="col-sm-2">
                        <dt>
                            @Html.DisplayNameFor(model => model.Availability_Product)
                        </dt>
                    </div>
                    <div class="col-sm-10">
                        <dd>
                            @Html.DisplayFor(model => model.Availability_Product)
                        </dd>
                    </div>
                </dl>

                <form asp-action="Delete">
                    <input asp-for="id_Product" type="hidden" class="for-control" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-primary">Regresar al listado</a>
                </form>
            </div>
        </div>
    </div>
</div>