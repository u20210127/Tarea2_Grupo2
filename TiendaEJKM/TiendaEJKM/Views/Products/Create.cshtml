@model ProductsModel

@{
    ViewData["Title"] = "Nuevo producto";
}

<h1>Nueva producto</h1>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name_Product" class="control-label"></label>
                <input asp-for="Name_Product" class="form-control" />
                <span asp-validation-for="Name_Product" class="text-danger"></span>
            </div>

            <div class="form-group-0 mb-3">
                <label asp-for="Category_Product" class="control-label"></label>
                <input asp-for="Category_Product" class="form-control" />
                <span asp-validation-for="Category_Product" class="text-danger"></span>
            </div>

            <div class="form-group-0 mb-3">
                <label asp-for="Price_Product" class="control-label"></label>
                <input asp-for="Price_Product" class="form-control" />
                <span asp-validation-for="Price_Product" class="text-danger"></span>
            </div>

            <div class="form-group-0 mb-3">
                <label asp-for="Availability_Product" class="control-label"></label>
                <select asp-for="Availability_Product" class="form-select">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
                <span asp-validation-for="Availability_Product" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />

                <a asp-action="Index">Regresar al listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>

    <script>
        function confirmAction() {
            if (confirm('¿Estás seguro de crear este producto?')) {
                return true;
            } else {
                window.location.href = '@Url.Action("Index", "Products")';
                return false;
            }
        }
    </script>
}